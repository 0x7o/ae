{
  "model": {
    "d_model": 1024,
    "n_heads": 12,
    "n_layers": 12,
    "vocab_size": 50257,
    "seq_len": 1024
  },
  "data": {
    "name": "Skylion007/openwebtext",
    "text_column": "text",
    "split": "train",
    "tokenizer": "gpt2"
  },
  "train": {
    "batch_size": 32,
    "n_epochs": 5,
    "dtype": "bfloat16",
    "optimizer": {
      "type": "adamw",
      "params": {
        "learning_rate": 0.001,
        "clip_norm": 0.5,
        "accum_steps": 4
      }
    },
    "scheduler": {
      "type": "cosine",
      "warmup_steps": 100
    },
    "generate": {
      "steps": 1000,
      "max_length": 48,
      "temperature": 0.7,
        "prompts": [
          "Once upon a time",
          "In a galaxy far far away",
          "In a world where",
          "The quick brown fox jumps over the"
        ]
    },
    "output_dir": "ae-0-1B",
    "save_checkpoint_steps": 1000
  }
}