{
  "model": {
    "d_model": 768,
    "n_heads": 12,
    "n_layers": 12,
    "vocab_size": 50257,
    "seq_len": 1024
  },
  "data": {
    "name": "roneneldan/TinyStories",
    "text_column": "text",
    "split": "train",
    "tokenizer": "gpt2"
  },
  "train": {
    "batch_size": 32,
    "n_epochs": 1,
    "optimizer": {
      "type": "adamw",
      "params": {
        "learning_rate": 0.0001,
        "clip_norm": 1.0,
        "accum_steps": 4
      }
    },
    "generate": {
        "steps": 1000,
        "max_length": 20,
        "prompts": [
          "Once upon a time",
          "In a galaxy far far away",
          "In a world where"
        ]
    },
    "output_dir": "ae-0-1B",
    "save_checkpoint_steps": 60000
  }
}