{
  "model": {
    "d_model": 768,
    "d_ff": 1024,
    "n_heads": 12,
    "n_layers": 12,
    "vocab_size": 50257,
    "seq_len": 2048
  },
  "data": {
    "name": "Trelis/tiny-shakespeare",
    "text_column": "Text",
    "split": "train",
    "tokenizer": "gpt2"
  },
  "train": {
    "batch_size": 8,
    "n_epochs": 1,
    "optimizer": {
      "type": "adam",
      "params": {
        "learning_rate": 0.0001
      }
    },
    "scheduler": {
      "type": "cosine",
      "warmup_steps": 10000
    },
    "clip_grad_norm": 1.0,
    "output_dir": "ae-small",
    "save_checkpoint_steps": 1000
  }
}