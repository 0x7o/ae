{
  "model": {
    "d_model": 768,
    "d_ff": 1024,
    "n_heads": 12,
    "n_layers": 12,
    "vocab_size": 50257,
    "seq_len": 1024
  },
  "data": {
    "name": "stas/openwebtext-10k",
    "text_column": "text",
    "split": "train",
    "tokenizer": "gpt2"
  },
  "train": {
    "batch_size": 4,
    "n_epochs": 1,
    "optimizer": {
      "type": "adamw",
      "params": {
        "learning_rate": 0.001
      }
    },
    "clip_grad_norm": 1.0,
    "output_dir": "ae-small",
    "save_checkpoint_steps": 100
  }
}