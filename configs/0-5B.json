{
  "model": {
    "d_model": 1024,
    "n_heads": 16,
    "n_layers": 24,
    "vocab_size": 50257,
    "seq_len": 1024
  },
  "data": {
    "name": "Elriggs/openwebtext-100k",
    "text_column": "text",
    "split": "train",
    "tokenizer": "gpt2"
  },
  "train": {
    "batch_size": 32,
    "n_epochs": 3,
    "optimizer": {
      "type": "adamw",
      "params": {
        "learning_rate": 0.0002,
        "clip_norm": 1.0,
        "accum_steps": 1
      }
    },
    "clip_grad_norm": 1.0,
    "output_dir": "ae-0-3B",
    "save_checkpoint_steps": 1000,
    "generate": {
        "steps": 1000,
        "max_length": 20,
        "prompts": [
          "Once upon a time",
          "In a galaxy far far away",
          "In a world where"
        ]
    }
  }
}