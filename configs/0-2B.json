{
  "model": {
    "d_model": 1024,
    "query_heads": 8,
    "kv_heads": 2,
    "n_layers": 12,
    "vocab_size": 50257,
    "seq_len": 1024
  },
  "data": {
    "name": "roneneldan/TinyStories",
    "text_column": "text",
    "split": "train",
    "tokenizer": "gpt2"
  },
  "train": {
    "batch_size": 32,
    "n_epochs": 1,
    "dtype": "bfloat16",
    "optimizer": {
      "type": "adamw",
      "params": {
        "learning_rate": 0.001,
        "clip_norm": 1.0,
        "accum_steps": 2
      }
    },
    "scheduler": {
      "type": "cosine",
      "warmup_steps": 1000
    },
    "generate": {
      "steps": 1000,
      "max_length": 85,
      "temperature": 1.0,
        "prompts": [
          "Once upon a time",
          "In a galaxy far far away",
          "In a world where",
          "<|endoftext|>"
        ]
    },
    "output_dir": "ae-0-1B",
    "save_checkpoint_steps": 5000
  }
}